        }

        private void LogCierreOperacion(OperacionActiva op, string motivo)
        {
            string direccionIcono = op.Direccion == TendenciaZona.Alcista ? "LONG" : "SHORT";
            
            Print($"\nâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
            Print($"â•‘ {direccionIcono} OPERACIÃ“N #{op.Id} CERRADA");
            Print($"â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
            Print($"â•‘ Motivo: {motivo}");
            Print($"â•‘ Estado: {op.Estado}");
            if (op.TP1Ejecutado) Print($"â•‘ TP1: EJECUTADO");
            if (op.TrailingActivo) Print($"â•‘ Trailing: ESTUVO ACTIVO");
            Print($"â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
        }
        
        private void LogEstadoGeneral(DateTime tiempo)
        {
            if (!LogsDetallados) return;
            
            Print($"\nâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
            Print($"â•‘ RESUMEN - {tiempo:HH:mm:ss}");
            Print($"â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
            Print($"â•‘ Bloques: {contadorBloques} | Zonas: {zonasActivas.Count}");
            Print($"â•‘ SeÃ±ales: {zonasActivas.Sum(z => z.Senales.Count)} | Operaciones: {contadorOperaciones}");
            
            if (operacionEnCurso && operacionActual != null)
            {
                Print($"â•‘ â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
                Print($"â•‘ OPERACIÃ“N EN CURSO:");
                string dir = operacionActual.Direccion == TendenciaZona.Alcista ? "LONG" : "SHORT";
                Print($"â•‘ {dir} #{operacionActual.Id} | Estado: {operacionActual.Estado}");
                Print($"â•‘ Entrada: {operacionActual.PrecioEntrada:F2} | Actual: {Close[0]:F2}");
                
                if (operacionActual.TP1Ejecutado)
                {
                    Print($"â•‘ TP1: EJECUTADO | TP2: {operacionActual.PrecioTP2:F2}");
                    if (operacionActual.TrailingActivo)
                    {
                        Print($"â•‘ Trailing ACTIVO | Stop: {operacionActual.UltimoStopTrailing:F2}");
                    }
                }
                else
                {
                    Print($"â•‘ Esperando TP1: {operacionActual.PrecioTP1:F2}");
                    Print($"â•‘ Stop Loss: {operacionActual.PrecioStopLoss:F2}");
                }
            }
            
            Print($"â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
        }
        #endregion
